<h1>Add a tweet</h1>
<% if session[:user_id] %>
    <form action="/tweet" method="POST">
      <p><b>User:</b> <%= @user.name %> <input type="hidden" name="user_id" value="<%= @user.id %>"</p>
      </p>
      <p>Status: <input type="text" name="status"></p>
      <input class="btn btn-primary" type="submit">
    </form>
<% end %>